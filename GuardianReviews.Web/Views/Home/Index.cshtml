@using GuardianReviews.Domain.Model
@using GuardianReviews.Domain.BaseClasses
@model List<Review>
@{Layout = "~/Views/Shared/_Layout.cshtml";}

<script src="@Url.Content("~/Scripts/jquery.raty.min.js")" type="text/javascript"></script>
<div id="menucontainer">
    <ul id="menu">
        <li><span><a href="/review">All</span></a></li>
        @foreach (var reviewType in Enumeration.GetAll<ReviewTypes>().Where(r => r.ShowInUI))
        {
        <li><span><a href="/review/@reviewType.Name">@reviewType.DisplayName </a></span></li>
        }
        
    </ul>
</div>

<script>
    
    $(function () {
        $("#menucontainer").tabs();
    });
    
</script>