@using GuardianReviews.Domain.Model
@using GuardianReviews.Domain.BaseClasses
@model List<Review>
@{Layout = "~/Views/Shared/_Layout.cshtml";}

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.4.1.js" type="text/javascript"></script>    
@*<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.4.1.vsdoc.js" type="text/javascript"></script>*@
<script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.6/jquery-ui.js" type="text/javascript"></script>

<div id="menucontainer">
    <ul id="menu">
        <li><span><a href="/review">All</span></a></li>
        @foreach (var reviewType in Enumeration.GetAll<ReviewTypes>().Where(r => r.ShowInUI))
        {
        <li><span><a href="/review/@reviewType.Name">@reviewType.DisplayName </a></span></li>
        }
        
    </ul>
</div>

<script>
    
    $(function () {
        $("#menucontainer").tabs();
    });
    
</script>